.title{
  padding: 4x;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  border-radius: 4px;

}
.title-text{
   padding: 0 12px;
   font-size: 20px;
   color: #2b3b46;
   margin:8px auto;
}
.time,.author{
  margin: 10px auto;
  font-size: 30rpx;
  width:46%;
  text-align: center;
 
}
.icon{
  width: 16px;
  height: 16px;
  margin-right: 8px;
}
.time-a,.author-a{
  width: 48rpx;
  background-color:#00a0e9;
  color: #fff;
  padding: 2px;
  border-radius: 4px;
  margin-right: 16px;
}
.author-a{
  background-color: #fb5757;
}
.time-b,.author-b{
  color: #5d7187
}
.title>image{
  width: 100%;
  height: 100%;
}
.content {
  padding: 16px;
  display: flex;
  flex-wrap: wrap;
  margin: 8px;
  box-shadow: 0 1px 5px #ebebeb;
  border: 1px solid #ebebeb;
  border-radius: 4px;
}
.article-img{
  display: flex;
  justify-content: center;
  align-items: center;
}